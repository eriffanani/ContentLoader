<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Loader.Lines" parent="@style/Loader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/loader_line_height</item>
        <item name="android:color">@color/color_line_content_loader</item>
    </style>
    <style name="Loader.Lines.Medium" parent="@style/Loader.Lines">
        <item name="android:layout_height">@dimen/loader_line_height_medium</item>
    </style>
    <style name="Loader.Lines.Large" parent="@style/Loader.Lines">
        <item name="android:layout_height">@dimen/loader_line_height_large</item>
    </style>

    <style name="LoaderContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="loaderType">blink</item>
        <item name="android:autoStart">false</item>
    </style>
    <style name="LoaderContainer.Auto" parent="LoaderContainer">
        <item name="android:autoStart">true</item>
    </style>
    <style name="LoaderContainer.Shimmer" parent="LoaderContainer">
        <item name="loaderType">shimmer</item>
    </style>
    <style name="LoaderContainer.Shimmer.Auto" parent="LoaderContainer.Shimmer">
        <item name="android:autoStart">true</item>
    </style>

</resources>