    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum lorem"
        android:maxLines="1"
        android:textSize="14sp"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum lorem"
        android:maxLines="1"
        android:textSize="12sp"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum lorem"
        android:maxLines="1"
        android:textSize="12sp"
        android:ellipsize="end"/>

</LinearLayout>